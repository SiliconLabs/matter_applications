<configurator>
    <domain name="CHIP" />
    <cluster>
        <domain>Measurement &amp; Sensing</domain>
        <name>Weather Station</name>
        <code>0xFFF1FEDC</code>
        <define>WEATHER_STATION_CLUSTER</define>
        <description>The Sample cluster showcases a weather station Matter device</description>

        <attribute side="server" code="0x0000" define="WIND_SPEED" type="SINGLE" writable="true"
            default="0" optional="false">Wind Speed</attribute>
        <attribute side="server" code="0x0001" define="WIND_DIRECTION" type="INT32U" writable="true"
            default="0" optional="false">Wind Direction</attribute>
        <attribute side="server" code="0x0002" define="RAINFALL" type="SINGLE" writable="true"
            default="0" optional="false">Rainfall</attribute>

    </cluster>

</configurator>